{
  "name": "@allspark-js/builder",
  "version": "0.10.0",
  "description": "Builder for typescript services.",
  "bin": {
    "allspark-builder": "bin/builder"
  },
  "keywords": [
    "js",
    "ts",
    "allspark",
    "builder"
  ],
  "author": "Andrew Cavalcante pacifico <andrewcpacifico@gmail.com>",
  "homepage": "https://github.com/andrewcpacifico/allspark-ts#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewcpacifico/allspark-ts.git"
  },
  "scripts": {
    "prepublishOnly": "npm run compile",
    "compile": "rm -rf ./dist && tsc -p tsconfig.build.json && cp -r ./{package.json,bin,config} dist/",
    "test": "mocha test/unit/**/*.spec.ts",
    "test:unit:dev": "mocha test/unit/**/*.spec.ts --watch"
  },
  "bugs": {
    "url": "https://github.com/andrewcpacifico/allspark-ts/issues"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "dependencies": {
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@types/yargs": "^17.0.7"
  }
